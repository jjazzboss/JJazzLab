<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>run</actionName>
            <packagings>
                <packaging>nbm-application</packaging>
            </packagings>
            <goals>
                <goal>nbm:cluster-app</goal>
                <goal>nbm:run-platform</goal>
                
            </goals>
            <properties>
                <netbeans.run.params.ide>-J-Drun.from.ide=true</netbeans.run.params.ide>
            </properties>
        </action>
        <action>
            <actionName>CUSTOM-Run project en:US</actionName>
            <displayName>Run project en:US</displayName>
            <goals>
                <goal>nbm:cluster-app</goal>
                <goal>nbm:run-platform</goal>
                                
            </goals>
            <properties>
                <netbeans.run.params.ide>-J-Drun.from.ide=true --locale en:US</netbeans.run.params.ide>
            </properties>
        </action>
        <action>
            <actionName>CUSTOM-Run project loggers</actionName>
            <displayName>Run project loggers</displayName>
            <goals>
                <goal>nbm:cluster-app</goal>
                <goal>nbm:run-platform</goal>
            </goals>
            <properties>
                <netbeans.run.params.ide>-J-Drun.from.ide=true --locale en:US -J-DChordLeadSheetImpl.level=100</netbeans.run.params.ide>
            </properties>
        </action>
        <action>
            <actionName>CUSTOM-Run project en:US fresh start</actionName>
            <displayName>Run project fresh start</displayName>
            <goals>
                <goal>nbm:cluster-app</goal>
                <goal>nbm:run-platform</goal>
            </goals>
            <properties>
                <netbeans.run.params.ide>-J-Drun.from.ide=true --locale en:US -J-Dforce.fresh.start=true</netbeans.run.params.ide>
            </properties>
        </action>
        <action>
            <actionName>CUSTOM-Debug fresh start en:US</actionName>
            <displayName>Debug fresh start en:US</displayName>
            <packagings>
                <packaging>nbm-application</packaging>
            </packagings>
            <goals>
                <goal>nbm:cluster-app</goal>
                <goal>nbm:run-platform</goal>
            </goals>
            <properties>
                
                <jpda.listen>true</jpda.listen>
                <netbeans.run.params.debug>-J-agentlib:jdwp=transport=dt_socket,suspend=n,server=n,address=${jpda.address} -J-Drun.from.ide=true --locale en:US -J-Dforce.fresh.start=true</netbeans.run.params.debug>
            </properties>
        </action>
        
    </actions>
